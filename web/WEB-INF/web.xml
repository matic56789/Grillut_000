<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LandingPage</servlet-name>
        <servlet-class>ph.pup.itech.grillut.controller.LandingPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>ph.pup.itech.grillut.controller.addProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserPage</servlet-name>
        <servlet-class>ph.pup.itech.grillut.controller.UserPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterPage</servlet-name>
        <servlet-class>ph.pup.itech.grillut.controller.RegisterPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LandingPage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserPage</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserPage</servlet-name>
        <url-pattern>/user/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterPage</servlet-name>
        <url-pattern>/customer/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterPage</servlet-name>
        <url-pattern>/customer/registration/add</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
